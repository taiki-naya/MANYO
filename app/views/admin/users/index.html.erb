<h1>For Administrator ONLY</h1>
<%= link_to 'Create a New User', new_admin_user_path %>
<table>
  <thead>
    <tr>
      <th>Class</th>
      <th>Name</th>
      <th>Email</th>
      <th>Count of task</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><% if user.admin? == true %>
            Admin
          <% else %>
            User
          <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to 'Profile', user_path(user), class: "btn btn-primary btn-sm" %> |
          <%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-primary btn-sm" %> |
          <%= link_to 'Delete', admin_user_path(user),
                                method: :delete, data: { confirm: %(Are you sure?)},
                                class: "btn btn-danger btn-sm" %> |
          <%= link_to 'Admin Authority', controller: 'admin/users', action: 'authority', id: user.id %>
      </td>
    </tr>
    <% end %>
</tbody>
</table>
